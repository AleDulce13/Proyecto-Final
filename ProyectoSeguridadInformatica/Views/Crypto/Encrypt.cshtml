@model ProyectoSeguridadInformatica.Models.EncryptViewModel

@{
    ViewData["Title"] = "Encriptar";
}

<div class="row justify-content-center">
    <div class="col-md-8 security-card">
        <h2 class="mb-2 security-section-title">Encriptar texto con AES</h2>
        <p class="security-section-subtitle mb-4">
            Este módulo usa <strong>AES</strong> (cifrado simétrico) con una contraseña que eliges tú.
            A partir de esa contraseña se deriva una clave segura internamente; deberás usar la misma
            clave para poder recuperar el texto original.
        </p>

        <form asp-action="Encrypt" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="PlainText" class="form-label"></label>
                <textarea asp-for="PlainText" class="form-control" rows="4"></textarea>
                <span asp-validation-for="PlainText" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Key" class="form-label"></label>
                <input asp-for="Key" class="form-control" type="password" />
                <span asp-validation-for="Key" class="text-danger"></span>
                <small class="form-text text-muted">
                    Usa una frase que recuerdes; la misma será necesaria para desencriptar.
                </small>
            </div>

            <button type="submit" class="btn btn-primary">Encriptar</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.CipherText))
        {
            <hr />
            <h4>Resultado cifrado (Base64)</h4>
            <textarea class="form-control" rows="4" readonly style="background-color:#020617;color:#e5e7eb;">@Model.CipherText</textarea>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


