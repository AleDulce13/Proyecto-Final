@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Ha ocurrido un error</h1>

<p>
    Se ha producido un problema al procesar tu solicitud. Por favor, inténtalo de nuevo
    más tarde. Si el problema persiste, ponte en contacto con el administrador.
</p>

<p>
    <strong>Código HTTP:</strong> <code>@Context.Response.StatusCode</code>
</p>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Código de error:</strong> <code>@Model.RequestId</code>
    </p>
}
